<div class="d-flex align-items-center justify-content-center mt-4">
    <h1> SIGN IN </h1>
</div>

<%= form_with url: sign_in_path do |form| %>
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "some@email"%>
    </div>

    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control" %>
        <%= link_to "Forgot you password?", password_reset_path %>
    </div>

    <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-dark" %>
    </div>
<% end %>
