<h1 class="d-flex align-items-center justify-content-center">Recover you password</h1>

<%= form_with url: password_reset_path do |form| %>

    <div class="mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", placeholder: "Some@email.com" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Reset password", class: "btn btn-primary" %>
    </div>

<%end %>